{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",

    "jsx": "react-jsx",
    /* Bundled projects */
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleDetection": "force",

    /* Path Aliases */
    "baseUrl": ".",
    "module": "preserve",
    "paths": {
      "@/*": ["app/*"],
      "content-collections": ["./.content-collections/generated"]
    },
    "resolveJsonModule": true,
    "allowJs": true,

    "checkJs": true,
    /* Strictness */
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    /* Base Options: */
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": [
    ".eslintrc.cjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    "eslint.config.mjs"
  ],

  "exclude": ["node_modules"]
}
